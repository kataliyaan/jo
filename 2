    <title>Valentine's Envelope</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: pink;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        .container {
            position: relative;
            width: 300px;
            height: 250px;
            cursor: pointer;
        }

        .envelope {
            position: absolute;
            width: 100%;
            height: 200px;
            background: #ff4d6d;
            border-radius: 10px 10px 0 0;
            bottom: 0;
            z-index: 2;
        }

        .flap {
            position: absolute;
            width: 0;
            height: 0;
            border-left: 150px solid transparent;
            border-right: 150px solid transparent;
            border-bottom: 100px solid #ff4d6d;
            top: -100px;
            z-index: 3;
            transition: 0.5s;
        }

        .card {
            position: absolute;
            width: 280px;
            height: 170px;
            background: white;
            border-radius: 10px;
            top: 50px;
            left: 10px;
            z-index: 1;
            text-align: center;
            padding: 20px;
            box-shadow: 0px 5px 10px rgba(0,0,0,0.2);
            transform: translateY(100px);
            transition: 0.5s;
        }

        .card p {
            font-size: 18px;
            font-weight: bold;
            color: #ff4d6d;
        }

        .container.open .flap {
            transform: rotateX(180deg);
        }

        .container.open .card {
            transform: translateY(-10px);
        }

        .hearts {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .heart {
            position: absolute;
            color: red;
            font-size: 20px;
            animation: float 3s infinite;
        }

        @keyframes float {
            0% { transform: translateY(0); opacity: 1; }
            100% { transform: translateY(-100px); opacity: 0; }
        }
